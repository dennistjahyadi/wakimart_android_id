<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentBottom="true"
    android:fitsSystemWindows="true">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@color/greenWakiBg" />

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="18dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/wakimartlogo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.wakimart.wakimartindonesia.components.TextViewMontserratBold
            android:id="@+id/tvSubTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="KEUNTUNGAN KARTU VIRTUAL"
            android:textColor="@color/white"
            android:textSize="@dimen/font_large"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView" />

        <FrameLayout
            android:id="@+id/mainLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="32dp"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvSubTitle">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <com.wakimart.wakimartindonesia.components.TextViewMontserratBold
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:layout_margin="4dp"
                        android:textSize="16sp"
                        android:text="1. Gratis biaya keanggotaan."/>
                    <com.wakimart.wakimartindonesia.components.TextViewMontserratBold
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:layout_margin="4dp"
                        android:textSize="16sp"
                        android:text="2. Keanggotaan seumur hidup."/>
                    <com.wakimart.wakimartindonesia.components.TextViewMontserratBold
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:layout_margin="4dp"
                        android:textSize="16sp"
                        android:text="3. Dapatkan informasi terbaru dan penawaran spesial."/>
                    <com.wakimart.wakimartindonesia.components.TextViewMontserratBold
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:layout_margin="4dp"
                        android:textSize="16sp"
                        android:text="4. Bisa melihat video produk dari website kami."/>
                    <com.wakimart.wakimartindonesia.components.TextViewMontserratBold
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:layout_margin="4dp"
                        android:textSize="16sp"
                        android:text="5. Dapatkan katalog produk terbaru."/>
                    <com.wakimart.wakimartindonesia.components.TextViewMontserratBold
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:layout_margin="4dp"
                        android:textSize="16sp"
                        android:text="6. Dapat berpartisipasi dalam &quot;Program Pasti Untung&quot; "/>
                    <com.wakimart.wakimartindonesia.components.TextViewMontserratBold
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:layout_margin="4dp"
                        android:textSize="16sp"
                        android:text="7. Bekerja sama dengan partner / toko."/>
                    <com.wakimart.wakimartindonesia.components.TextViewMontserratBold
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:layout_margin="4dp"
                        android:textSize="16sp"
                        android:text="8. Dapatkan harga special."/>

                    

                </LinearLayout>
        </FrameLayout>

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="bottom"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">



            <Button
                android:id="@+id/btnBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="4dp"
                android:background="@drawable/btn_enabled"
                android:clickable="true"
                android:enabled="true"
                android:padding="12dp"
                android:text="KEMBALI"
                android:textColor="@android:color/white"
                android:textSize="@dimen/font_medium2"
                android:textStyle="bold" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:text="Â© Copyright WAKimart 2019."
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_medium" />
            </LinearLayout>
        </LinearLayout>
    </android.support.constraint.ConstraintLayout>

    <include
        layout="@layout/progress_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</FrameLayout>
